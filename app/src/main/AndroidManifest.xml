<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.room76.apollo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/Base.AppTheme.Fullscreen"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".rooms.RoomsActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".roomdetail.RoomDetailActivity" />
        <activity android:name=".addroom.AddRoomActivity" />
        <activity
            android:name=".signin.SignInActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".mymusic.MyMusicActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>